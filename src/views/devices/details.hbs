 <section class="details-hero">
        <div class="container">
            <h2>Laptop Details</h2>
        </div>
    </section>

    <section class="details-content">
        <div class="container">
            <div class="product-details">
                <div class="product-image">
                    <img src="{{device.image}}" alt="Laptop">
                </div>
                <div class="product-info">
                    <h3>Brand: {{device.brand}}</h3>
                    <p><strong>Model:</strong> Nitro 5 AN515-58</p>
                    <p><strong>Hard Disk:</strong> 512GB SSD</p>
                    <p><strong>Screen Size:</strong> 15.6 inches</p>
                    <p><strong>RAM:</strong> 16GB</p>
                    <p><strong>Operating System:</strong> Windows 10</p>
                    <p><strong>CPU:</strong> Intel Core™ i5-12450H</p>
                    <p><strong>GPU:</strong> NVIDIA GeForce RTX™ 3050</p>
                    <p><strong>Price:</strong> $1499</p>
                    <p><strong>Color:</strong> Black</p>
                    <p><strong>Weight:</strong> 2.5kg</p>
                </div>
            </div>
            <div class="product-actions">
                <button class="btn edit"><a href="">Edit</a></button>
                <button class="btn delete"><a href="">Delete</a></button>
                <button class="btn prefer"><a href="">Prefer</a></button>
                 <p class="prefer-message">You've already preferred this device</p>
            </div>
        </div>
    </section>