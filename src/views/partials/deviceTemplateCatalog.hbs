{{#if devices}}
{{#each devices}}

<div class="product-item">
                    <img
                        src="{{image}}">
                    <h3>{{brand}}</h3>
                    <h2>${{price}}</h2>
                    <p>CPU: {{cpu}}</p>
                    <p>GPU: {{gpu}}</p>
                    <p>Screen: {{screen}}</p>
                    <a href="/devices/{{_id}}/details" class="btn">View Details</a>
                </div>
{{else}}
<p class="no-post">There haven't been any devices posted yet.</p>
{{/each}}
{{/if}}